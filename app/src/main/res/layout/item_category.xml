<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemLayout">

    <TextView
        android:id="@+id/text_category_name"
        style="@style/ListItem.Primary" />

    <TextView
        android:id="@+id/text_number_of_words"
        style="@style/ListItem.Secondary"
        android:layout_below="@id/text_category_name" />

    <ImageView
        android:id="@+id/image_more_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/more_options_description"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_more_vert" />

</RelativeLayout>