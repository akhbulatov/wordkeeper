<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListItemLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_category_name"
            style="@style/ListItem.Primary" />

        <TextView
            android:id="@+id/text_number_of_words"
            style="@style/ListItem.Secondary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_more_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/more_options_description"
        android:foreground="?attr/selectableItemBackground"
        app:srcCompat="@drawable/ic_more_vert" />

</RelativeLayout>