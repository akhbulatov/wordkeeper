<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ListItem">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
    </style>

    <style name="ListItemText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemText.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="ListItemText.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="EmptyText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

</resources>
