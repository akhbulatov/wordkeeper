<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">?colorPrimaryDark</item>
        <item name="titleTextStyle">@style/TextAppearance.App.ActionMode.Title</item>
    </style>

    <style name="TextAppearance.App.ActionMode.Title" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="tint">@null</item>
    </style>

    <style name="ListItem">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?listPreferredItemPaddingEnd</item>
    </style>

    <style name="ListItemText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemText.Primary">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="ListItemText.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="EmptyText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

</resources>
